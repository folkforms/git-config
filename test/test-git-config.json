{
  "usePath": false,
  "patternMatching": [
    {
      "type": "companyInternal",
      "patterns": ["company-internal"]
    },
    {
      "type": "companyPublic",
      "patterns": ["company-public"]
    }
  ],
  "config": [
    {
      "type": "global",
      "settings": [
        "alias.amend=commit --amend --no-edit",
        "alias.cb=checkout -b",
        "alias.signed=log -s --show-signature -1"
      ]
    },
    {
      "type": "companyInternal",
      "settings": [
        "user.name=MyCompanyUserName",
        "user.email=mycompanyemail@company.com",
        "user.signingkey=SomeSigningKey",
        "commit.gpgsign=true"
      ]
    },
    {
      "type": "companyPublic",
      "settings": [
        "user.name=MyPersonalUserName",
        "user.email=mypersonalemail@example.com",
        "user.signingkey=",
        "commit.gpgsign=false"
      ]
    }
  ]
}
